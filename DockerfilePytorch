FROM nvidia/cuda:11.7.1-runtime-ubuntu20.04
ARG DEBIAN_FRONTEND=noninteractive
RUN apt update
RUN apt-get install -y --no-install-recommends gnupg2 curl ca-certificates apt-transport-https gnupg lsb-release
RUN apt install python3-pip -y
COPY ./PythonWorkers/requirements.txt requirements.txt
RUN pip3 install -r requirements.txt --no-cache-dir
